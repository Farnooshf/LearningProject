<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="fill"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="100dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="AC" />

            <Button
                android:id="@+id/btn_sign"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="100dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="100dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="%" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="100dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num_seven"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="7" />

            <Button
                android:id="@+id/btn_num_eight"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="8" />

            <Button
                android:id="@+id/btn_num_nine"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="9" />

            <Button
                android:id="@+id/btn_multiple"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num_four"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="4" />

            <Button
                android:id="@+id/btn_num_five"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="5" />

            <Button
                android:id="@+id/btn_num_six"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="6" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num_one"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="1" />

            <Button
                android:id="@+id/btn_num_two"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="2" />

            <Button
                android:id="@+id/btn_num_three"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="3" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num_zero"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="0" />

            <Button
                android:id="@+id/btn_none"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="." />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_weight="4"
                android:background="@color/light_blue"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>
